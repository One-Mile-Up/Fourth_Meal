<div id="orders">
  <h1>All Orders</h1>
  <table class="table">
    <thead>
      <tr>
        <th>Dish</th>
        <th>Description</th>
        <th>Price</th>
        <th>Categories</th>
      </tr>
    </thead>
  <% @orders.each do |order| %>
    <% items = order.items %>
    <h3>Order #<%= order.id %></h3>
    <% items.each do |item| %>
    <tbody>
    <tr>
      <td><%= item.title %></td>
      <td><%= item.description %></td>
      <td><%= print_price(item.price) %></td>
      <td>
      <% item.categories.each do |category| %>
          <%= category.name %>
          <% end %></td>
    </tr>
    </tbody>
    <% end %>
    <p>Order Status: <%= order.status %></p>
  <% end %>
</table>
</div>
