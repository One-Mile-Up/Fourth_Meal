<h1>Current Order</h1>

<h3>Order ID: <%= @order.id %></h3>
<% @order.order_items.each do |order_item| %>
  <% item = order_item.item %>
  <div id="item_<%= item.id %>">
    <h5><%= item.title %></h5>
    <p><%= item.description %></p>
    <p>Price: <%= item.price %></p>
    <p>Category: <%= item.category %></p>
    <p>Quantity: <%= order_item.quantity %>
  </div>
<% end %>

