<%= form_for @item do |f| %>
  <p>
    <%= f.label :title %>
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :description %>
    <%= f.text_field :description %>
  </p>
  <p>
    <%= f.label :price %>
    <%= f.text_field :price %>
  </p>
  <p>
  <%= f.collection_select(:name, :category_id, Category.all, :id, :name) %> 
  </p>
  <p>
    <%= f.submit "submit" %>
  </p>
<% end %>
